<h3> <%= drop.titleize %> Runes (Level 4 - 6) </h3>
<small>You can scroll down to find statistics for rune levels 1-3!</small>
<table id="log-compare-table-<%= drop %>" class="logtable table table-striped table-bordered" style='display: table'>
  <thead>
    <tr>
      <th rowspan="2">Stage</th>
      <th rowspan="2">Runs</th>
      <td colspan="4" width="25%">Level 6*</td>
      <td colspan="4" width="25%">Level 5*</td>
      <td colspan="4" width="25%">Level 4*</td>
    </tr>
    <tr>
      <td>#</td>
      <td>SV</td>
      <td>Eff</td>
      <td>%</td>
      <td>#</td>
      <td>SV</td>
      <td>Eff</td>
      <td>%</td>
      <td>#</td>
      <td>SV</td>
      <td>Eff</td>
      <td>%</td>
    </tr>
  </thead>
  <tbody>
    <% @statistics.each do |scenario, data| %>
      <% next if data[:totals][:rewards][drop.titleize].blank? %>
      <tr>
        <th><%= scenario.to_s %></th>
        <th><%= number_with_delimiter(data[:totals][:runs]) %>

        <% 3.times.each do |i| %>
          <td><%= number_with_delimiter(data[:totals][:rewards][drop.titleize][6-i].try(:[], :count)) %></td>
          <td><%= number_with_delimiter(data[:totals][:rewards][drop.titleize][6-i].try(:[], :value)) %></td>
          <td><%= number_to_percentage(data[:totals][:rewards][drop.titleize][6-i].try(:[], :efficiency), precision: 2) %></td>
          <td><%= number_to_percentage(data[:totals][:rewards][drop.titleize][6-i].try(:[], :average), precision: 2) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

